page {
    width: 100%;
    height: 100%;
    font-size: 0;
}

.pay-box {
    background-color: #f9f9f9;
    width: 100%;
    height: 100%;
}
.pay-order {
	font-size: 36rpx;
	color: #333;
	padding: 50rpx 0;
	text-align: center;
	line-height: 80rpx;
}
.pay-order .money {
	font-size: 60rpx;
	font-weight: bold;
}
.pay-info {
	background: #fff;
	border-top: 1rpx solid #eee;
	border-bottom: 1rpx solid #eee;
	display: flex;
	justify-content: space-between;
	padding: 30rpx;
	margin-bottom: 60rpx;
	font-size: 36rpx;
}
.pay-info .label {
	color: #999;
}
.pay-btn {
	background: #4CAF50;
	color: #fff;
	font-size: 40rpx;
	padding:  25rpx 20rpx;
	text-align: center;
	margin: 0 30rpx;
	border-radius: 10rpx;
}
.pay-tips {
	position: absolute;
	bottom: 30rpx;
	left: 0;
	font-size: 24rpx;
	color: #bbb;
	right: 0;
	text-align: center;
}